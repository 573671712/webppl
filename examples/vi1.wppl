var binomial = function() {
  var a = sampleMeanField(bernoulliERP, [0.5]);
  var b = sampleMeanField(bernoulliERP, [0.5]);
  var c = sampleMeanField(bernoulliERP, [0.5]);
  factor(a || b ? 0 : -1);
  return a + b + c;
};

